    <?= \System\Translator::translateModule('login', 'login', 'logout') ?>
</button>
<script>
    $('#logoutBtn').click(function(){
        $.ajax({
            url: '<?= $this->get('logoutUrl') ?>',
            method: 'POST',
            success: function(){
                location.reload();
            }
        });
    });
    
</script>